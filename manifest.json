{
    "manifest_version": 3,
    "name": "Facebook Voice Controller",
    "version": "1.0",
    "description": "Control Facebook with voice commands.",
    "permissions": ["scripting", "activeTab"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html"
    },
    "host_permissions": [
      "https://www.facebook.com/*"
    ]
  }